@{
    var db = Database.Open("ZuberDataStore");
    var selectQuery = "SELECT * FROM Product ORDER BY Name";    
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Bakery Products</title>
        <style>
            table, th, td {
                border: solid 1px #bbbbbb;
                border-collapse: collapse;
                padding: 4px;
            }
        </style>
    </head>
    <body>
        <h1>Products List</h1>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in db.Query(selectQuery)) 
                {
                    <tr>
                        <td>@row.Id</td>
                        <td>@row.Name</td>
                        <td>@row.Description</td>
                        <td>@row.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>    
</html>
